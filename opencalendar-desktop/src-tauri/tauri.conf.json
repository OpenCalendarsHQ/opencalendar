{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenCalendars",

  "version": "0.2.0",
  "identifier": "com.arjan.opencalendar",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OpenCalendars",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "visible": true,
        "hiddenTitle": false,
        "decorations": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main-tray",
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "menuOnLeftClick": false,
      "tooltip": "OpenCalendars"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["opencalendar"]
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://opencalendar.app/api/releases/latest"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI2NDFENUQ5RDhBMTAwODcKUldTSEFLSFkyZFZCdGl0T1Uwd0dPTzBkTjArRTZOZ3JENnBzRUNNYmdPRU1mN0Z0Qy9KK25oM24K"
    }
  }
}
