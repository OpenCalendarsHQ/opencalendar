{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenCalendar",
  "version": "0.1.0",
  "identifier": "com.arjan.opencalendar",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OpenCalendar",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["opencalendar"]
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/ArjandenHartog/opencalendar/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdDNjdDNkQ5NUM4RUY4RkYKUldULytJNWMyY1puZkZqWUwvNUlGQTdrbk1Xd1RndTM5UC8waWVURmpqczd2NW90bGt5MElMaFAK"
    }
  }
}
