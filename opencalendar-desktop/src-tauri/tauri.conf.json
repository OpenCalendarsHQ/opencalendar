{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenCalendars",

  "version": "0.2.0",
  "identifier": "com.arjan.opencalendar",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OpenCalendars",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "visible": true,
        "hiddenTitle": false,
        "decorations": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main-tray",
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "menuOnLeftClick": false,
      "tooltip": "OpenCalendars"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": false,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "headerImage": "icons/nsis-header.png",
        "sidebarImage": "icons/nsis-sidebar.png",
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "languages": ["English", "Dutch"],
        "displayLanguageSelector": true
      }
    }
  },
  "plugins": {
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["opencalendar"]
      }
    },
    "updater": {
      "active": false
    }
  }
}
